{
  "name": "remittance-comparison-app",
  "version": "1.0.0",
  "description": "A full-stack web application for comparing remittance exchange rates",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
